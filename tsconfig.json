{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "types": ["node", "jest"],
    "strict": true,
    "paths": {
      "@app/*": ["./app/*"],
      "@components/*": ["./components/*"],
      "@assets/*": ["./assets/*"],
      "@navigation/*": ["./navigation/*"],
      "@utils/*": ["./utils/*"],
      "@constants/*": ["./constants/*"],
      "@hooks/*": ["./hooks/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", ".expo/types/**/*.ts", "expo-env.d.ts"]
}
